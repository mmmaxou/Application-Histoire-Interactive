<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"


    android:orientation="vertical"
    android:weightSum="1"
    android:background="#cac4c4">

    <!--<ImageView-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent"-->
        <!--app:srcCompat="@drawable/frame1"-->
        <!--android:id="@+id/decorImgBox"-->
        <!--android:layout_weight="2"-->
        <!--android:scaleType="centerCrop"-->
        <!--android:elevation="0dp" />-->

    <ImageSwitcher
        android:id="@+id/imageSwitcher1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:elevation="0dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true" >

    </ImageSwitcher>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/first_layout">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:id="@+id/layout">

            <RelativeLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:id="@+id/space">

                <ImageButton
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/settingsicon"
                    android:id="@+id/imageButton"
                    android:elevation="1dp"
                    android:background="@color/transparent"
                    android:layout_width="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:onClick="onClickSettings" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2">

                <Button
                    android:text="Auto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/buttonAuto"
                    style="@android:style/Widget.Button"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:onClick="onClickAuto" />

                <TextView
                    android:text="Personnage"
                    android:id="@+id/textViewLocuteur"
                    android:fontFamily="sans-serif"
                    android:background="@drawable/cadre"
                    android:layout_alignBottom="@+id/expression"
                    android:layout_marginLeft="5dp"
                    android:textSize="30sp"
                    android:layout_width="wrap_content"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="false"
                    android:layout_toEndOf="@+id/expression"
                    android:padding="5dp"
                    android:layout_toRightOf="@+id/expression" />

                <ImageView
                    app:srcCompat="@mipmap/ic_launcher"
                    android:id="@+id/expression"
                    android:layout_weight="2"
                    android:scaleType="centerInside"
                    android:layout_alignParentBottom="true"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_width="wrap_content" />

                <ImageView
                    app:srcCompat="@mipmap/ic_launcher"
                    android:id="@+id/personnage"
                    android:layout_weight="2"
                    android:scaleType="centerInside"
                    android:layout_alignParentBottom="true"
                    android:elevation="1dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:minHeight="100dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="5">

                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/cadre"
                            android:text="A"
                            android:id="@+id/choix1"
                            android:onClick="onClick1"
                            android:layout_marginLeft="100dp"
                            android:layout_marginRight="100dp"
                            android:layout_weight="1"
                            android:layout_marginBottom="5dp"
                            android:layout_marginTop="5dp"
                            android:textColor="?android:attr/textColorTertiary"
                            android:textSize="20dp" />

                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/cadre"
                            android:text="B"
                            android:id="@+id/choix2"
                            android:onClick="onClick2"
                            android:layout_marginLeft="100dp"
                            android:layout_marginRight="100dp"
                            android:layout_weight="1"
                            android:layout_marginBottom="5dp"
                            android:layout_marginTop="5dp"
                            android:textSize="20dp"
                            android:textColor="?android:attr/textColorTertiary" />

                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:visibility="gone">

                        <Button
                            android:text="Next"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/choixNext"
                            android:onClick="onClick3"
                            android:layout_weight="1"
                            android:visibility="gone" />

                        <Button
                            android:text="Before"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/buttonBefore"
                            android:layout_weight="1"
                            android:onClick="onClickBefore"
                            android:visibility="gone" />
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="0dp">

            <ScrollView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/scrollView2"
                android:background="@drawable/cadre"
                android:minHeight="120dp"
                android:layout_weight="5"
                android:layout_margin="6dp"
                android:padding="5dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/BoiteDialogue"
                    android:layout_weight="5"
                    android:text="Lorem ipsum"
                    android:textSize="20dp"
                    android:textColor="?android:attr/textColorTertiary" />
            </ScrollView>

        </LinearLayout>

    </LinearLayout>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/ListViewHistorique"
        android:layout_margin="30dp"
        android:background="@android:color/background_light"
        android:alpha="0.7"
        android:visibility="gone" />

</RelativeLayout>
